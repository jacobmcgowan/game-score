{
	"name": "game-score",
	"displayName": "Game Score",
	"description": "Displays the score of the current or latest game of your favorite American Football team in the status bar.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "gameScore.show",
				"title": "Game Score: Show"
			},
			{
				"command": "gameScore.hide",
				"title": "Game Score: Hide"
			}
		],
		"configuration": {
			"type": "object",
			"Title": "Game Score Configuration",
			"properties": {
				"gameScore.following": {
					"type": "string",
					"default": "cleveland-browns",
					"description": "The team that you want to follow"
				},
				"gameScore.frequency": {
					"type": "number",
					"default": 60000,
					"description": "Refresh frequency in milliseconds"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"typescript": "^3.3.1",
		"tslint": "^5.12.1",
		"vscode-test": "^1.0.2"
	},
	"dependencies": {
		"@types/cheerio": "^0.22.13",
		"@types/request": "^2.48.2",
		"@types/request-promise": "^4.1.44",
		"cheerio": "^1.0.0-rc.3",
		"request": "^2.88.0",
		"request-promise": "^4.2.4"
	}
}
