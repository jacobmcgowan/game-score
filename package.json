{
	"name": "game-score",
	"displayName": "Game Score",
	"description": "Displays the score of the current or latest game of your favorite team or player in the status bar.",
	"version": "0.2.0",
	"engines": {
		"vscode": "^1.37.0"
	},
	"categories": [
		"Other"
	],
	"license": "MIT",
	"author": {
		"name": "Jacob McGowan"
	},
	"repository": {
		"url": "https://github.com/jacobmcgowan/game-score",
		"type": "git"
	},
	"publisher": "jacob-mcgowan",
	"icon": "images/icon.png",
	"activationEvents": [
		"*"
	],
	"main": "./dist/extension",
	"contributes": {
		"commands": [
			{
				"command": "gameScore.show",
				"title": "Game Score: Show"
			},
			{
				"command": "gameScore.hide",
				"title": "Game Score: Hide"
			}
		],
		"configuration": {
			"type": "object",
			"Title": "Game Score Configuration",
			"properties": {
				"gameScore.following": {
					"type": "string",
					"default": "cleveland-browns",
					"description": "The team or player that you want to follow"
				},
				"gameScore.frequency": {
					"type": "number",
					"default": 60000,
					"description": "Refresh frequency in milliseconds"
				},
				"gameScore.league": {
					"type": "string",
					"default": "nfl",
					"description": "The league that you want to follow"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"test-compile": "tsc -p ./",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.14.22",
		"@types/vscode": "^1.37.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"ts-loader": "^6.2.0",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.0.2",
		"webpack": "^4.41.2",
		"webpack-cli": "^3.3.12"
	},
	"dependencies": {
		"@types/cheerio": "^0.22.13",
		"@types/request": "^2.48.3",
		"@types/request-promise": "^4.1.44",
		"cheerio": "^1.0.0-rc.3",
		"request": "^2.88.0",
		"request-promise": "^4.2.4"
	}
}
